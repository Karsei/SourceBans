{% if App.user.data.hasPermission('ADD_BANS') %}
    <section class="tab-pane fade" id="pane-add">
{% do this.renderPartial('/bans/_form', {
	'action': ['bans/add'],
	'demo': demo,
	'model': ban,
}) %}
    </section>
    <section class="tab-pane fade" id="pane-import">
{% do this.renderPartial('/bans/_import') %}
    </section>
{% endif %}
{% if App.user.data.hasPermission('BAN_PROTESTS') %}
    <section class="tab-pane fade" id="pane-protests">
      <ul class="menu nav nav-pills">
        <li class="active"><a href="#protests">{{ t('sourcebans', 'views.admin.bans.protests.active.title') }}</a></li>
        <li><a href="#protests/archive">{{ t('sourcebans', 'views.admin.bans.protests.archive.title') }}</a></li>
      </ul>
{% do this.renderPartial('/protests/_admin', {
	'model': protests,
}) %}
    </section>
    <section class="tab-pane fade" id="pane-protests-archive">
      <ul class="menu nav nav-pills">
        <li><a href="#protests">{{ t('sourcebans', 'views.admin.bans.protests.active.title') }}</a></li>
        <li class="active"><a href="#protests/archive">{{ t('sourcebans', 'views.admin.bans.protests.archive.title') }}</a></li>
      </ul>
{% do this.renderPartial('/protests/_admin', {
	'archive': true,
	'model': protests,
}) %}
    </section>
{% endif %}

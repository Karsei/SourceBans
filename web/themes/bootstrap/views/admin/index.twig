      </div>
      <div class="span8" style="float: none; margin: 0 auto;">
        <table class="table table-stat">
          <tbody>
            <tr>
              <td class="value" width="20%">{{ total_appeals }}</td>
              <td width="30%">{{ t('sourcebans', 'controllers.admin.bans.menu.appeals') }}</td>
              <td class="value" width="20%">{{ total_archived_appeals }}</td>
              <td width="30%">{{ t('sourcebans', 'Archived appeals') }}</td>
            </tr>
            <tr>
              <td class="value">{{ total_reports }}</td>
              <td>{{ t('sourcebans', 'controllers.admin.bans.menu.reports') }}</td>
              <td class="value">{{ total_archived_reports }}</td>
              <td>{{ t('sourcebans', 'Archived reports') }}</td>

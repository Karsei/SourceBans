    </div>
{% do App.clientScript.registerScript('admin_index', '
  $.getJSON("' ~ this.createUrl('admin/version') ~ '", function(data) {
    if(data.error) {
      $("#relver").text("' ~ t('sourcebans', 'Error') ~ '").addClass("text-error");
      $("#versionmsg").text(data.error).addClass("text-error");
      return;
    }
    if(data.update) {
      $("#versionmsg").text("' ~ t('sourcebans', 'A new release is available.') ~ '").addClass("text-error");
    }
    else {
      $("#versionmsg").text("' ~ t('sourcebans', 'You have the latest release.') ~ '").addClass("text-success");
    }
    
    $("#relver").text(data.version);
    $("#versionmsg").css("font-weight", "bold");
  });
') %}
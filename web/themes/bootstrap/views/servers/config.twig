    <section class="tab-pane" id="pane-config">
      <p>{{ t('sourcebans', 'The game server needs the following configuration to be able to communicate with the database.') }}</p>
      <p>{{ t('sourcebans', 'Copy the {section} section below and place it on the game server in {file}, so that it looks similar to this:', {
        '{file}': '<strong>/[' ~ t('sourcebans', 'Game')|lower ~ ']/addons/sourcemod/configs/databases.cfg</strong>',
        '{section}': '<strong>"sourcebans"</strong>',
      }) }}</p>
      <textarea class="span9" cols="60" rows="20" readonly="readonly">"Databases"
{
	"driver_default"		"mysql"
	
	"sourcebans"
	{
		"driver"			"mysql"
		"host"			"{{ db.host == 'localhost' ? App.request.serverHostAddress : db.host }}"
		"database"		"{{ db.dbname }}"
		"user"			"{{ App.db.username }}"
		"pass"			"{{ App.db.password }}"
		//"timeout"		"0"
		"port"			"{{ db.port }}"
	}
	
	"storage-local"
	{
		"driver"			"sqlite"
		"database"		"sourcemod-local"
	}
}</textarea>
    </section>